<div class="row">
    <% @posts.each do |post| %>
    <div class="col-4 post-preview">
        <h1><%= link_to post.title, post_path(post) %></h1>
        <p>Posted by: <%= post.user.fullname %></p>
        <%= image_tag post.picture.small.url %>
        <br>
        <p><%= post.content[0..70] %>...<%= link_to 'read more', post %>.</p>

    </div>
    <% end %>
</div>
